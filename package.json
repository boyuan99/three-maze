{
  "name": "three-maze",
  "version": "0.0.3",
  "description": "A VR environment designed for animal behavior research.",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "cross-env NODE_ENV=development concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "postinstall": "node setup/setup-python.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:core": "jest test/core",
    "test:experiments": "jest test/experiments",
    "test:integration": "jest test/integration",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@dimforge/rapier3d-compat": "^0.14.0",
    "cross-env": "^7.0.3",
    "serialport": "^13.0.0",
    "three": "^0.169.0",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "concurrently": "^9.0.1",
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8",
    "vite": "^5.4.9",
    "wait-on": "^8.0.1",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "build": {
    "appId": "com.example.three-maze",
    "productName": "three-maze",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "asar": false
  }
}
